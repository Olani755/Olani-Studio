---
import Layout from "../layouts/Layout.astro";
import heroImage from "../images/maria and ceasar.jpg";
import image1 from "../images/josh and aleyda 2.jpg";
import image2 from "../images/ceasar and maria.jpg";
import image3 from "../images/josh and aleyda 4.jpg";
import image4 from "../images/natalie.jpg";
import image5 from "../images/josh and aleyda 6.jpg";
import image6 from "../images/ceasar and maria 2.jpg";
import image7 from "../images/ring.jpg";
import image8 from "../images/josh and aleyda 3.jpg";
import image9 from "../images/statue.jpg";
---

<Layout title="Portfolio">
  <img
    class="hero-image"
    src={heroImage}
    alt="maria and ceasar"
    fetchpriority="high"
    height="640"
    width="1152"
  />
  <section class="portfolio">
    <h1>Photography Portfolio</h1>
    <article class="paragraph">
      <p>
        "I am a skilled photographer and videographer who can capture the
        special moments of your life using the latest equipment and software.
        With my creativity and passion for storytelling, I can turn these
        moments into beautiful photo keepsakes that will be treasured by you and
        your loved ones for years to come."
      </p>
    </article>
    <article class="portfolio-images">
      <img src={image1} alt="statue" height="854px" width="634px" />
      <img src={image2} alt="statue" height="854px" width="634px" />
      <img src={image3} alt="statue" height="854px" width="634px" />
      <img src={image4} alt="statue" height="854px" width="634px" />
      <img src={image5} alt="statue" height="854px" width="634px" />
      <img src={image6} alt="statue" height="854px" width="634px" />
      <img src={image7} alt="statue" height="454px" width="634px" />
      <img src={image8} alt="statue" height="454px" width="634px" />
      <img src={image9} alt="statue" height="854px" width="634px" />
    </article>
  </section>
</Layout>

<style>
  h1 {
    font-size: clamp(1.5rem, 5vw, 4rem);
    margin-block-end: 1rem;
  }

  .portfolio {
    margin-block-end: 2rem;
  }

  .portfolio-images {
    display: grid;
    gap: 2rem;
    max-width: 600px;
    margin-inline: auto;
    margin-block-start: 2rem;
  }

  img {
    object-fit: cover;
    border-radius: 0.25rem;
  }

  .hero-image {
    width: 100%;
    max-width: 100rem;
    max-height: 40rem;
    object-fit: cover;
    object-position: 0% 15%;
    margin-inline: auto;
    margin-block-end: 2rem;
  }
</style>
