---
import Layout from "../layouts/Layout.astro";
import Olani from "../images/olani.jpg";
---

<Layout title="Olani Studios">
  <div class="hero">
    <div class="content">
      <h1>Welcome to <span>Olani Studios</span></h1>
      <p>Award-Winning Houston Area Photography</p>
      <a class="button" href="/what-we-do">Learn More</a>
    </div>
    <img src={Olani} alt="" height="500" width="1300" />
  </div>
</Layout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    text-align: center;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 5rem);
    font-family: sans-serif;
    margin-block-start: 1rem;
  }

  span {
    display: block;
  }

  p {
    margin-top: 0.5rem;
    font-size: 1.25rem;
  }

  img {
    object-fit: cover;
    object-position: top;
    aspect-ratio: 2 / 2.5;
    border-radius: 0.5rem;
  }

  .button {
    display: inline-block;
    text-decoration: none;
    color: white;
    background-color: #b79639;
    padding: 1em 2em;
    margin-top: 3em;
    border-radius: 0.5em;
    transition: 0.3s;
  }

  .button:hover {
    opacity: 0.6;
  }

  @media (min-width: 800px) {
    .hero {
      display: grid;
      gap: 4rem;
      align-items: center;
      grid-template-columns: 1fr 1fr;
      text-align: left;
    }

    .content h1 {
      max-width: 15ch;
    }
  }
</style>
